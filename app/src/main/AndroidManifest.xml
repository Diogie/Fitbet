<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitbet">

    <application
        android:name="com.fitbet.application.RicheraceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Richerace">
        <activity
            android:name="com.fitbet.ui.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name="com.fitbet.ui.ChallengeActivity" />
        <activity android:name="com.fitbet.ui.NewChallengeActivity" />
        <activity
            android:name="com.fitbet.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Richerace.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fitbet.ui.ProfileActivity" />
    </application>

</manifest>